{
	"extends": "../../tsconfig.base.json",
	"include": ["./src", "./types"],
	"exclude": ["./lib", "./esm", "./cjs"],
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": ".",
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "lib",
		"composite": true,
		"paths": {
			"@svelteuidev/core": ["../svelteui-core/src/lib"],
			"@svelteuidev/actions": ["../svelteui-actions/src/lib"],
			"@svelteuidev/utilities": ["../svelteui-utilities/src/lib"],
			"@svelteuidev/motion": ["../svelteui-motion/src/lib"]
		}
	},
	"references": [
		{ "path": "../svelteui-core/src/lib" },
		{ "path": "../svelteui-actions/src/lib" },
		{ "path": "../svelteui-utilities/src/lib" },
		{ "path": "../svelteui-motion/src/lib" }
	]
}
